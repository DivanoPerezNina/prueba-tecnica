{
  "compilerOptions": {
    "target": "ES2020",             /* Compila a una versión moderna de JS */
    "module": "CommonJS",            /* Formato de módulo que Lambda usa */
    "rootDir": "./src",              /* Donde está tu código TS */
    "outDir": "./dist",              /* Donde saldrá el código JS compilado */
    "strict": true,                  /* Habilita todas las revisiones estrictas */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],           /* Solo compila lo que está en src/ */
  "exclude": ["node_modules"]
}